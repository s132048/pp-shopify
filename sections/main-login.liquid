{{ 'customer.css' | asset_url | stylesheet_tag }}

<div class="customer login">
  <span id="recover" class='account_title'>
    Forgot your password?
  </span>
  <div class='contents_box'>
      We will send an email to reset your password.
  </div>
  <div class='account_form_box'>
    {%- form 'recover_customer_password' -%}
      {% assign recover_success = form.posted_successfully? %}
        <input type="email"
          value=""
          name="email"
          id="RecoverEmail"
          autocorrect="off"
          autocapitalize="off"
          autocomplete="email"
          {% if form.errors %}
            aria-invalid="true"
            aria-describedby="RecoverEmail-email-error"
            autofocus
          {% endif %}
          placeholder="Email"
        >
      
      <div class="account_buttons">
      <button>
        Reset password
      </button>
      </div>
    {%- if form.errors -%}
        <div class="account_error_box">
            {%- for field in form.errors -%}
              <span id="RecoverEmail-email-error" >
                {%- if field == 'form' -%}
                  No account found with thath email.
                {%- endif -%}
              </span>
            {%- endfor -%}
        </div>
      {%- endif -%}
      {% if form.posted_successfully? %}
        <div class='account_message'>
          <span>
            Temporary password have been sent by email
          </span>
        </div>
      {% endif %}
    {%- endform -%}
  </div>
  <!--  로그인 -->    
  {%- unless recover_success == true -%}
  <h2 class='account_title' id='login'>
    Login
  </h2>
  <div class="account_form_box">
    {%- form 'customer_login', novalidate: 'novalidate' -%}
        <input
          type="email"
          name="customer[email]"
          id="CustomerEmail"
          autocomplete="email"
          autocorrect="off"
          autocapitalize="off"
          {% if form.errors contains 'form' %}
            aria-invalid="true"
          {% endif %}
          placeholder="Email"
        >

      {%- if form.password_needed -%}      
          <input
            type="password"
            value=""
            name="customer[password]"
            id="CustomerPassword"
            autocomplete="current-password"
            {% if form.errors contains 'form' %}
              aria-invalid="true"
            {% endif %}
            placeholder="Password"
          >
      {%- endif -%}

      <div class="account_buttons">
      <!-- 로그인 버튼 -->
      <button>
        Login
      </button>
    
      <!-- 회원가입 버튼 -->
      <a href="{{ routes.account_register_url }}">
        Register
      </a>
    
      <!-- 비밀번호 재설정 버튼 -->
      {%- if form.password_needed -%}     
        <a href="#recover">
          Find password
        </a>
      {%- endif -%}
      </div>
      {%- if form.errors -%}
          <div class="account_error_box">
            {%- for field in form.errors -%}
              <span>
                {%- if field == 'form' -%}
                  {{ form.errors.messages[field] }}
                {%- endif -%}
              </span>
            {%- endfor -%}
        </div>
      {%- endif -%}   
    {%- endform -%}
  <!-- 비밀번호 재설정 -->
  
  
  {%- if shop.checkout.guest_login -%}
    <div>
      {%- form 'guest_login' -%}
        <button>
          {{ 'customer.login_page.guest_continue' | t }}
        </button>
      {%- endform -%}
    </div>
  {%- endif -%}
  {% endunless %}
</div>

{% schema %}
{
  "name": "t:sections.main-login.name",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
