{{ 'customer.css' | asset_url | stylesheet_tag }}

<div class="customer login" data-status=''>
  <span id="recover" class='account_title' style='display: flex;'>
    Forgot your password?
  </span>
  <div class='account_form_box'>
  <div class='form_title'>
      We will send an email to reset your password.
  </div>
    {%- form 'recover_customer_password'-%}
      {% assign recover_success = form.posted_successfully? %}
        <input type="email"
          value=""
          name="email"
          id="RecoverEmail"
          autocorrect="off"
          autocapitalize="off"
          autocomplete="email"
          {% if form.errors %}
            aria-invalid="true"
            aria-describedby="RecoverEmail-email-error"
            autofocus
          {% endif %}
          placeholder="Email"
        >
      
      <div class="account_buttons">
      <button>
        Reset password
      </button>
      </div>
    {%- if form.errors -%}
        <div class="account_error_box">
            {%- for field in form.errors -%}
              <span id="RecoverEmail-email-error" >
                {%- if field == 'form' -%}
                  No account found with that email.
                {%- endif -%}
              </span>
            {%- endfor -%}
        </div>
      {%- endif -%}
      {% if form.posted_successfully? %}
        <div class='account_message'>
          <span>
            Temporary password have been sent by email.
          </span>
        </div>
      {% endif %}
    {%- endform -%}
  </div>
  {%- if recover_success == true -%}
    <script>
      let customers = document.getElementsByClassName('customer');
      for (let i = 0; i < customers.length; i++) {
        customers[i].setAttribute('data-status', 'recover_success');
      }
    </script>
  {% endif %}
  <!--  로그인 -->    
  <span class='account_title' id='login'>
    Login
  </span>
  <div class="account_form_box">
    {%- form 'customer_login', novalidate: 'novalidate' -%}
        <input
          type="email"
          name="customer[email]"
          id="CustomerEmail"
          autocomplete="email"
          autocorrect="off"
          autocapitalize="off"
          {% if form.errors contains 'form' %}
            aria-invalid="true"
          {% endif %}
          placeholder="Email"
        >

      {%- if form.password_needed -%}      
          <input
            type="password"
            value=""
            name="customer[password]"
            id="CustomerPassword"
            autocomplete="current-password"
            {% if form.errors contains 'form' %}
              aria-invalid="true"
            {% endif %}
            placeholder="Password"
          >
      {%- endif -%}

      <div class="account_buttons">
      <!-- 로그인 버튼 -->
      <button>
        Login
      </button>
    
      <!-- 회원가입 버튼 -->
      <a href="{{ routes.account_register_url }}">
        Register
      </a>
    
      <!-- 비밀번호 재설정 버튼 -->
      {%- if form.password_needed -%}     
        <a href="#recover">
          Forgot your password?
        </a>
      {%- endif -%}
      </div>
      {%- if form.errors -%}
          <div class="account_error_box">
            {%- for field in form.errors -%}
              <span>
                {%- if field == 'form' -%}
                  {{ form.errors.messages[field] }}
                {%- endif -%}
              </span>
            {%- endfor -%}
        </div>
      {%- endif -%}   
    {%- endform -%}
  <!-- 비밀번호 재설정 -->
  
  
  {%- if shop.checkout.guest_login -%}
    <div>
      {%- form 'guest_login' -%}
        <button>
          {{ 'customer.login_page.guest_continue' | t }}
        </button>
      {%- endform -%}
    </div>
  {%- endif -%}
</div>
{% schema %}
{
  "name": "t:sections.main-login.name",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
