{%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when 'announcement' -%}
      <style>
        #info-banner {
          /*display: flex;*/
          display: none;
          justify-content: center;
          align-items: center;
          position: fixed;
          z-index: 1000000;
          top: 0;
          left: 0;
          width: 100%;
          height: 100vh;
          background: rgba(0, 0, 0, 0.55);
          font-family: 'ABC Diatype', 'Noto Sans KR', sans-serif;
          letter-spacing: 0;
          font-size: 22px;
          line-height: 28px;
          word-break: keep-all;

        }

        @media screen and (max-width: 1024px) {
          #info-banner {
            font-size: 19px;
            line-height: 24px;
          }
        }

        .ib-inner * {
          color: #fff;
          text-align: center;
        }

        .ib-overlay {
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          z-index: 1;
          cursor: pointer;
        }

        .ib-inner {
          position: relative;
          z-index: 10;
          display: flex;
          flex-direction: column;
          justify-content: center;
        }

        .ib-text {
          text-align: center;
        }

        .ib-close-btn {
          display: inline-block;
          cursor: pointer;
        }
      </style>
      <div id="info-banner">
        <div class="ib-overlay" onclick="closePopup()">

        </div>
        <div class="ib-inner">
          <div class="ib-text">
            <div style="white-space: pre-line">
              {{ block.settings.text | escape }}
              <span class="ib-close-btn" onclick="closePopup()">Ã—</span>
            </div>
          </div>
        </div>
      </div>
      <script>
        function closePopup() {
          document.getElementById('info-banner').style.display = 'none';

          document.cookie = "popup_closed=true; max-age=86400; path=/";
        }

        function checkPopup() {
          if (document.cookie.includes("popup_closed=true")) {

            document.getElementById('info-banner').style.display = 'none';
          } else {

            document.getElementById('info-banner').style.display = 'flex';
          }
        }
        window.onload = checkPopup;
      </script>

  {%- endcase -%}
{%- endfor -%}

{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "max_blocks": 12,
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "default": "Welcome to our store",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.text.label"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement"
      }
    ]
  }
}
{% endschema %}
