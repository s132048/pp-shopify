{{ 'customer.css' | asset_url | stylesheet_tag }}
<!-- 비밀번호 오류 텍스트 설정 필요   -->
<div class="customer reset-password">
  <span class='account_title'>
    Reset password
  </span>
  <div class='account_form_box'>
  <div class='form_title'>
      Enter a new password.
  </div>
  {%- form 'reset_customer_password' -%}    
      <input
        type="password"
        name="customer[password]"
        id="password"
        autocomplete="new-password"
        {% if form.errors contains 'password' %}
          aria-invalid="true"
          aria-describedby="password-error"
        {% endif %}
        placeholder="Password"
      >
      <input
        type="password"
        name="customer[password_confirmation]"
        id="password_confirmation"
        autocomplete="new-password"
        {% if form.errors contains 'password_confirmation' %}
          aria-invalid="true"
          aria-describedby="password_confirmation-error"
        {% endif %}
        placeholder="Confirm password"
      >
    <div class="account_buttons">
      <button>
        Reset
      </button>
    </div>
    {%- if form.errors -%}
      <div class='account_error_box'>
        {%- for field in form.errors -%}
          <span>
            {%- if field == 'form' -%}
              {{ form.errors.messages[field] }}
            {%- else -%}
              {% if field == 'password' %}
                Minimum 5 characters for the password
              {% elsif field == 'password_confirmation'%}
                Password unmatched
              {% endif %}
<!--               <a href="#{{ field }}">
                {{ form.errors.translated_fields[field] | capitalize }}
                {{ form.errors.messages[field] }}
              </a> -->
            {%- endif -%}
          </span>
        {%- endfor -%}
      </div>
    {%- endif -%}
  {%- endform -%}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-reset-password.name",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
