<style>
    #cookies-banner {
        /*display: flex;*/
        display: none;
        justify-content: center;
        align-items: center;
        position: fixed;
        z-index: 1000000;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: rgba(0, 0, 0, 0.55);
        font-family: 'ABC Diatype', 'Noto Sans KR', sans-serif;
        letter-spacing: 0;
        font-size: 22px;
        line-height: 28px;
        word-break: keep-all;
    }

    @media screen and (max-width: 1024px) {
        #cookies-banner {
            font-size: 19px;
            line-height: 24px;
        }
    }

    .cb-inner * {
        color: #fff;
    }

    .cb-inner > div:first-child {
        text-align: center;
    }

    .pc {
        display: inline-block;
    }

    .mobile {
        display: none;
    }

    @media screen and (max-width: 1024px) {
        .cb-inner > div:first-child {
            max-width: 280px;
        }

        .pc {
            display: none;
        }

        .mobile {
            display: inline-block;
        }
    }

    .cookie-btn-list {
        display: flex;
        justify-content: center;
        margin-top: 34px;
    }

    .cookie-btn-list > div {
        margin: 0 20px;
        cursor: pointer;
    }
</style>
<div id="cookies-banner">
    <div class="cb-inner">
        <div>
            <span class="pc">By selecting "Accept" you agree to the use of cookies.</span>
            <span class="mobile">By selecting "Accept"<br>
            you agree to the use of cookies.</span>
        </div>
        <div class="cookie-btn-list">
            <div onclick="handleAccept()">Accept</div>
            <div onclick="handleDecline()">Decline</div>
        </div>
    </div>
</div>
<script>
    function getBannerEl() {
        return document.getElementById('cookies-banner');
    }

    function hideBanner(res) {
        getBannerEl().style.display = 'none';
    }

    function showBanner() {
        getBannerEl().style.display = 'flex';
    }

    function handleAccept(e) {
        window.Shopify.customerPrivacy.setTrackingConsent(true, hideBanner);

        document.addEventListener('trackingConsentAccepted',function() {
            console.log('trackingConsentAccepted event fired');
        });
    }

    function handleDecline() {
        window.Shopify.customerPrivacy.setTrackingConsent(false,hideBanner);
    }

    function initCookieBanner() {
        const userCanBeTracked = window.Shopify.customerPrivacy.userCanBeTracked();
        const userTrackingConsent = window.Shopify.customerPrivacy.getTrackingConsent();
        console.log(userCanBeTracked, userTrackingConsent);
        if(!false && userTrackingConsent === 'no_interaction') {
            showBanner();
        }
    }

    window.Shopify.loadFeatures([
            {
                name: 'consent-tracking-api',
                version: '0.1',
            }
        ],
    function(error) {
        if (error) {
            console.log(error);
            throw error;
        }

        initCookieBanner();
    });
</script>